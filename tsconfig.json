{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node"],
    "module": "commonjs",                    
    "target": "ESNEXT",
    "declaration": true,
    "outDir": "./dist",  
    "lib": ["es6"],                     
    "allowJs": true,
    "moduleResolution": "node",       
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "~/*": ["*"],
      "@/*": ["./src/*"],
      "!/*": ["./src/jnpm/*"],
      "#/*": ["./src/pl.src/pluggable/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude" : [
    "src/**/*.spec.ts"
  ]
}
